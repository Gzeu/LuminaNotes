<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Custom Color Palette -->
    <Color x:Key="AccentPrimary">#6366F1</Color>
    <Color x:Key="AccentSecondary">#8B5CF6</Color>
    <Color x:Key="AccentTertiary">#EC4899</Color>
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="ErrorColor">#EF4444</Color>
    
    <!-- Card Backgrounds -->
    <SolidColorBrush x:Key="CardBackground" Color="{ThemeResource CardBackgroundFillColorDefault}"/>
    <SolidColorBrush x:Key="CardBackgroundSecondary" Color="{ThemeResource CardBackgroundFillColorSecondary}"/>
    
    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimary}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondary}"/>
    <SolidColorBrush x:Key="AccentTertiaryBrush" Color="{StaticResource AccentTertiary}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentPrimary}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentSecondary}" Offset="0.5"/>
        <GradientStop Color="{StaticResource AccentTertiary}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
    
    <!-- Shadows -->
    <x:Double x:Key="ElevationShadowDepth1">2</x:Double>
    <x:Double x:Key="ElevationShadowDepth2">4</x:Double>
    <x:Double x:Key="ElevationShadowDepth3">8</x:Double>
    
    <!-- Spacing -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingS">8</x:Double>
    <x:Double x:Key="SpacingM">12</x:Double>
    <x:Double x:Key="SpacingL">16</x:Double>
    <x:Double x:Key="SpacingXL">24</x:Double>
    <x:Double x:Key="SpacingXXL">32</x:Double>
    
    <!-- Animation Durations -->
    <Duration x:Key="FastDuration">0:0:0.15</Duration>
    <Duration x:Key="MediumDuration">0:0:0.3</Duration>
    <Duration x:Key="SlowDuration">0:0:0.5</Duration>
    
</ResourceDictionary>
