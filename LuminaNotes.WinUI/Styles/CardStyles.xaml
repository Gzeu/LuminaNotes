<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Card Style -->
    <Style x:Key="BaseCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Elevated Card Style -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource BaseCardStyle}">
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
        <Setter Property="Translation" Value="0,0,4"/>
    </Style>

    <!-- Interactive Card Style -->
    <Style x:Key="InteractiveCardStyle" TargetType="Border" BasedOn="{StaticResource BaseCardStyle}">
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <!-- Accent Card Style -->
    <Style x:Key="AccentCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource AccentGradientBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- Note Card Style -->
    <Style x:Key="NoteCardStyle" TargetType="Border" BasedOn="{StaticResource BaseCardStyle}">
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

</ResourceDictionary>
