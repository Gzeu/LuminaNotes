<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LuminaNotes.WinUI.Controls.AnimatedCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="CardBorder"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="16"
            PointerEntered="CardBorder_PointerEntered"
            PointerExited="CardBorder_PointerExited"
            PointerPressed="CardBorder_PointerPressed"
            PointerReleased="CardBorder_PointerReleased">
        
        <Border.RenderTransform>
            <CompositeTransform x:Name="CardTransform"/>
        </Border.RenderTransform>
        
        <Border.Shadow>
            <ThemeShadow/>
        </Border.Shadow>
        
        <ContentPresenter x:Name="ContentPresenter" Content="{Binding}"/>
    </Border>
</UserControl>
