<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LuminaNotes.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Lumina Notes"
    ExtendsContentIntoTitleBar="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Command Bar -->
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" Label="New Note" Click="NewNote_Click"/>
            <AppBarButton Icon="Save" Label="Save" Click="Save_Click"/>
            <AppBarSeparator/>
            <AppBarButton Icon="Find" Label="Search" Click="Search_Click"/>
        </CommandBar>

        <!-- Main Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Sidebar -->
            <NavigationView x:Name="NavView" Grid.Column="0"
                            PaneDisplayMode="LeftCompact"
                            IsBackButtonVisible="Collapsed"
                            IsSettingsVisible="True"
                            ItemInvoked="NavView_ItemInvoked">
                <NavigationView.MenuItems>
                    <NavigationViewItem Tag="DailyNotes" Content="Daily Notes">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE787;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Tag="AllNotes" Content="All Notes">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE8F1;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Tag="GraphView" Content="Graph View">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE915;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Tag="Search" Content="Search">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE721;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
            </NavigationView>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" Grid.Column="1" Padding="24,16"/>

            <!-- AI Sidebar -->
            <Grid Grid.Column="2" Width="340" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  Padding="16" x:Name="AiSidebar">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="AI Assistant" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

                <StackPanel Grid.Row="1" Spacing="12">
                    <Button Content="Summarize Note" HorizontalAlignment="Stretch" Click="Summarize_Click"/>
                    <Button Content="Rewrite Text" HorizontalAlignment="Stretch" Click="Rewrite_Click"/>
                    <Button Content="Generate Ideas" HorizontalAlignment="Stretch" Click="Generate_Click"/>
                    <Button Content="Q&amp;A on Notes" HorizontalAlignment="Stretch" Click="Query_Click"/>
                    
                    <TextBlock Text="AI Response:" Margin="0,16,0,8" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="AiResponseText" TextWrapping="Wrap" Text="AI responses will appear here..."/>
                    </ScrollViewer>
                </StackPanel>

                <TextBox Grid.Row="2" x:Name="AiQueryBox" PlaceholderText="Ask AI..." 
                         KeyDown="AiQueryBox_KeyDown"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <InfoBar Grid.Row="2" x:Name="StatusBar" 
                 Title="Status" 
                 Message="Ready" 
                 Severity="Informational" 
                 IsOpen="False"/>
    </Grid>
</Window>
