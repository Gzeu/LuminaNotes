<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LuminaNotes.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Lumina Notes"
    ExtendsContentIntoTitleBar="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top CommandBar -->
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" Label="New Note" Click="NewNote_Click"/>
            <AppBarButton Icon="Save" Label="Save" Click="Save_Click"/>
            <AppBarSeparator/>
            <AppBarToggleButton Icon="Setting" Label="AI Panel" IsChecked="{x:Bind ViewModel.IsAiSidebarOpen, Mode=TwoWay}"/>
        </CommandBar>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Sidebar -->
            <NavigationView x:Name="NavView" 
                          Grid.Column="0"
                          PaneDisplayMode="LeftCompact"
                          IsBackButtonVisible="Collapsed"
                          IsSettingsVisible="True"
                          ItemInvoked="NavView_ItemInvoked"
                          Width="320"
                          OpenPaneLength="280">
                <NavigationView.MenuItems>
                    <NavigationViewItem Tag="DailyNotes" Content="Daily Notes">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE163;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Tag="AllNotes" Content="All Notes">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE8F1;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Tag="GraphView" Content="Graph View">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE80F;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Tag="Search" Content="Search">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE721;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
            </NavigationView>

            <!-- Center Content Frame -->
            <Frame x:Name="ContentFrame" 
                   Grid.Column="1" 
                   Padding="24,16,24,16"/>

            <!-- Right AI Sidebar -->
            <Grid Grid.Column="2" 
                  Width="{x:Bind ViewModel.AiSidebarWidth, Mode=OneWay}"
                  Visibility="{x:Bind ViewModel.IsAiSidebarOpen, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="16,12">
                    <TextBlock Text="AI Assistant" 
                             Style="{StaticResource SubtitleTextBlockStyle}"/>
                </Border>

                <StackPanel Grid.Row="1" Spacing="8" Padding="16">
                    <Button Content="Summarize Note" 
                          HorizontalAlignment="Stretch"
                          Click="Summarize_Click"/>
                    <Button Content="Rewrite Text" 
                          HorizontalAlignment="Stretch"
                          Click="Rewrite_Click"/>
                    <Button Content="Generate Ideas" 
                          HorizontalAlignment="Stretch"
                          Click="Generate_Click"/>
                    <Button Content="Q&amp;A on Notes" 
                          HorizontalAlignment="Stretch"
                          Click="Query_Click"/>
                </StackPanel>

                <TextBox Grid.Row="2" 
                       PlaceholderText="Ask AI something..."
                       Margin="16"
                       AcceptsReturn="False"/>
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <InfoBar x:Name="StatusBar" 
               Grid.Row="2" 
               Title="Status" 
               Message="Ready" 
               Severity="Informational" 
               IsOpen="False"
               IsClosable="True"/>
    </Grid>
</Window>
